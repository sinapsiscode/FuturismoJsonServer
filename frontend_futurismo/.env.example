# Variables de entorno de Futurismo

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_WS_URL=http://localhost:3000

# Application Mode
VITE_APP_ENV=development

# Feature Flags
VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_WEBSOCKET=false
VITE_ENABLE_DEBUG_MODE=false

# API Timeouts (milliseconds)
VITE_API_TIMEOUT=30000
VITE_WS_RECONNECT_DELAY=5000

# Security
VITE_TOKEN_EXPIRY_HOURS=24
VITE_MAX_LOGIN_ATTEMPTS=5

# Storage Keys Prefix (to avoid conflicts with other apps)
VITE_STORAGE_PREFIX=futurismo_

# External Services
VITE_AVATAR_SERVICE_URL=https://ui-avatars.com/api/
VITE_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
VITE_GOOGLE_MAPS_API_KEY=your-api-key-here

# File Upload Limits
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100